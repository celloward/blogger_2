<h1>Articles Tagged with <% @tag.name %></h1>

<ul>
    <% @tag.articles.each do |article| %>
        <li><% if article %> 
            <%= link_to article.title, article_path(article) %> 
            <% else %>
            <% redirect_to tag_path(@tags) %>
            <% end %></li>
    <% end %>
</ul>